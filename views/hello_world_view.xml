<!-- hello_world/views/hello_world_view.xml -->
<odoo>
    <data>
        <record id="view_hello_world_form" model="ir.ui.view">
            <field name="name">hello.world.form</field>
            <field name="model">hello.world</field>
            <field name="arch" type="xml">
                <form string="Hello World">
                    <sheet>
                        <h1>Hello World</h1>
                    </sheet>
                </form>
            </field>
        </record>

        <menuitem id="menu_hello_world_root" name="Hello World"
                  sequence="1"/>
        <menuitem id="menu_hello_world" name="Hello World" parent="menu_hello_world_root"
                  action="action_hello_world"/>
    </data>
</odoo>
